             'database': 'DBNAME',
             'user': 'USERNAME',
             'password': 'PASSWORD',
             'host': 'localhost',
             'port': server.local_bind_port
             }
         conn = psycopg2.connect(**params)
         curs = conn.cursor()
         print ("database connected")
except:
    print ("Connection Failed")




